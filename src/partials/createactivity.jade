div(ng-app)
	div(ng-controller='CreateactivityCtrl')
		ul(class='unstyled')
			li(ng-repeat='change in changeable')
				div(ng-hide='edit')
					h1 {{change.title}}
						a(href='', ng-click='edit=!edit')
							i.icon-pencil
				div(ng-show='edit')
					input(ng-model='change.title')
					a(href='', ng-click='edit=!edit')
						i.icon-ok
			br
			li(ng-repeat='description in details')
				.span8.div(ng-hide='edit1')
					h3 {{description.desc}}
						a(href='', ng-click='edit1=!edit1')
							i.icon-pencil
				div(ng-show='edit1')
					textarea(rows='10', ng-model='description.desc')
					a(href='', ng-click='edit1=!edit1')
						i.icon-ok
			li(ng-repeat='event in events')
				div(ng-hide='edit2')
					td
						tr
							th {{event.place1}}
							th {{event.place2}}
							th {{event.date}}
							th {{event.time}}
							th {{event.source}}
							a(href='', ng-click='edit2=!edit2')
									i.icon-pencil
				div(ng-show='edit2')
					td
						tr
							th
								input(ng-model='event.place1', type='text')
							th	
								input(ng-model='event.place2', type='text')
							th
								input(ng-model='event.date', type='text')
							th
								input(ng-model='event.time', type='text')

							th
								input(ng-model='event.source')
								a(href='', ng-click='edit2=!edit2')
									i.icon-ok
		form(ng-submit='addEvent()')
			div(ng-hide='edit3')
				a(href='', ng-click='edit3=!edit3')
					input(class='btn', value='createEvent')
			div(ng-show='edit3')
				td
					tr
						th
							input(ng-model='insertplace1', type='text', placeholder='city')
						th
							input(ng-model='insertplace2', type='text', placeholder='country')
						th
							input(ng-model='insertdate', type='text', placeholder='date')
						th	
							input(ng-model='inserttime', type='text', placeholder='time')
						th
							input(ng-model='insertsource', type='text', placeholder='source')
							a(href='', ng-click='edit3=!edit3')
								input(type='submit', value='add', class='btn')
