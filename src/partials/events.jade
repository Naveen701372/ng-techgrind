.main-inner: .container
	.row
		#upcoming.span6: .widget
			.widget-header
				i.icon-cogs
				span.break
				h3 TechGrind Events
			.widget-content
				table.table.table-striped.table-condensed
					thead
						tr
							td
							td
					tbody
						tr.linkrow(align='center', ng-repeat='event in events', ng-click='showEvent(event)')
							td {{event.abbr}}
							td {{event.name}}
							td {{event.desc}}

		#workshops.span10: .widget
			.widget-header
				i.icon-bullhorn
				span.break
				h3 Regional Events
			.widget-content
				table.table.table-striped.table-condensed
					thead
						tr
							td
							td
							td
					tbody
						tr.linkrow(align='center', ng-repeat='event in regional', ng-click='showEvent(event)')
							td {{event.abbr}}
							td {{event.name}}
							td {{event.desc}}

		#conferences.span10: .widget
			.widget-header
				i.icon-upload-alt
				span.break
